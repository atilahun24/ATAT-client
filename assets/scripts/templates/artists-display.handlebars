<div class="container">
   <h2>Your Artists: </h2>
   <div class="row" id="Artists">
   {{#each artists as |artist|}}
   <div class="col-sm-6 col-md-4 col-lg-3 py-1">
       <div class="border border-white p-2 artist">
         <h4>{{artist.name}}</h4>
        <h6> Genre: {{artist.genre}} </h6>
      <!-- <div id ="update-artist"> -->
      <form id="update" class="update-artist" data-id="{{artist.id}}">
        <input type="name" name="artist[name]" required placeholder="Updated Name" class="form-control mb-1"/>
        <input type="genre" name="artist[genre]" required placeholder="Updated Genre" class="form-control mb-1" />
        <button type="submit" class="btn btn-info update-artist btn-block mb-1" data-id="{{artist.id}}"> Update Artist</button>
      </form>
      <button class="btn btn-danger remove-artist btn-block mb-1" data-id="{{artist.id}}"> Remove Artist</button>
      <!-- </div> -->
       </div>
  </div>
   {{/each}}
 </div>
</div>
